{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <h3 class="card-header">Lesson Quiz</h3>

        <div class="card-body">
            <form method="post" action="">
                {% for question in questions %}
                    <p><strong>{{ loop.index }}.) {{ question.question }}</strong></p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option[{{ loop.index }}]" id="option-1"
                               value="1" checked>
                        <label class="form-check-label" for="option-1">
                            {{ question.getOption1() }}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option[{{ loop.index }}]" id="option-2"
                               value="2">
                        <label class="form-check-label" for="option-2">
                            {{ question.getOption2() }}
                        </label>
                    </div>

                    {% if question.getOption3() %}
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="option[{{ loop.index }}]" id="option-3"
                                   value="3">
                            <label class="form-check-label" for="option-3">
                                {{ question.getOption3() }}
                            </label>
                        </div>
                    {% endif %}

                    {% if question.getOption4() %}
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="option[{{ loop.index }}]" id="option-4"
                                   value="4">
                            <label class="form-check-label" for="option-4">
                                {{ question.getOption4() }}
                            </label>
                        </div>
                    {% endif %}

                    {% if not loop.last %}
                        <hr>
                    {% endif %}


                {% endfor %}

                <input type="submit" class="btn btn-primary mt-3" value="Submit Quiz!">
            </form>
        </div>
    </div>
{% endblock %}


