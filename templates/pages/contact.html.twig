{% extends 'base.html.twig' %}
{% set loggedIn = is_granted('IS_AUTHENTICATED_REMEMBERED') %}
{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="d-inline">Contact Us</h3>
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="email1" class="sr-only">email</label>
                    <input type="text"
                           name="email"
                           class="form-control"
                           id="email1"
                           aria-label="email address"
                           placeholder="Your email" {% if loggedIn %} value="{{ user.getEmail() }}" {% endif %}>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="first_name1" class="sr-only">first name</label>
                        <input type="text"
                               name="first_name"
                               id="first_name1"
                               class="form-control"
                               aria-label="first name"
                               placeholder="First name" {% if loggedIn %} value="{{ user.getFirstName() }}" {% endif %}>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="last_name1" class="sr-only">last name</label>
                        <input type="text"
                               name="last_name"
                               id="last_name1"
                               class="form-control"
                               aria-label="last name"
                               placeholder="Last name" {% if loggedIn %} value="{{ user.getLastName() }}" {% endif %}>
                    </div>
                </div>

                <div class="form-group">
                    <label for="message1" class="sr-only">email</label>
                    <textarea rows="10" id="message1" aria-label="Your message" name="message" class="form-control"
                              placeholder="Your message..."></textarea>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
