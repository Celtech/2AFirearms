{% extends 'base.html.twig' %}

{% block body %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <div class="row justify-content-md-center">
        <div class="col-lg-5 col-md-7">
            {{ form_start(registrationForm, {'attr':{'id': 'login', 'class': 'register'}}) }}
            {{ form_errors(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_row(registrationForm.dateOfBirth) }}

            <div class="g-recaptcha form-group" style="width: 100% !important;"
                 data-sitekey="{{ publicKey }}"></div>
            <div id="button-section">

                <label class="float-left mt-2">
                    {{ form_row(registrationForm.iAgreeToTheTerms) }}
                </label>

                {{ form_row(registrationForm.submit) }}
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}